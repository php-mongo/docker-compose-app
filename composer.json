{
    "name": "php-mongo/admin",
    "type": "project",
    "description": "PHP Mongo Admin. Built for PHP 7.2.+",
    "keywords": [
        "framework",
        "laravel",
        "mongodb",
        "php",
        "vue"
    ],
    "homepage": "https://phpmongoadmin.com",
    "authors": [
        {
            "name": "Gilbert Rehling",
            "email": "gilbert@gilbert-rehling.com",
            "homepage": "https://gilbert-rehling.com",
            "role": "Developer"
        }
    ],
    "support": {
        "docs": "http://phpmongoadmin.com/support/documentation",
        "email": "support@phpmongoadmin.com",
        "issues": "https://github.com/phpmongodb/admin/issues",
        "source": "https://github.com/phpmongodb/admin",
        "authentication": "https://docs.mongodb.com/manual/core/authentication",
        "users": "https://docs.mongodb.com/manual/tutorial/manage-users-and-roles",
        "configuration": "https://docs.mongodb.com/manual/reference/configuration-options"
    },
    "license": "GNU GPLv3",
    "require": {
        "php": "^7.3.33",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mongo": "*",
        "ext-mongodb": "*",
        "ext-zlib": "*",
        "eloquent/composer-config-reader": "^2.1",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/events": "^7.18",
        "ipinfo/ipinfo": "1.1.*",
        "laravel/framework": "^7.18.0",
        "laravel/passport": "^9.3",
        "laravel/tinker": "^2.0",
        "mongodb/mongodb": "^1.6",
        "ext-readline": "*"
    },
    "require-dev": {
        "facade/ignition": "^2.0",
        "fzaninotto/faker": "^1.9.1",
        "laravel/ui": "^2.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^4.1",
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "provide": {
        "ext-mongo": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('docker/build/docker/php-mongo-web/config/env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
